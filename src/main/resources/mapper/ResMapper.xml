<mapper namespace="cn.yiidii.pigeon.cmdb.mapper.ResMapper">

    <select id="getAllRes" resultType="cn.yiidii.pigeon.cmdb.entity.Res">
        SELECT id,name,alias,host,def_name defName,status,create_time  createTime,update_time updateTime FROM res order by create_time;
    </select>
    <select id="getResByName" resultType="cn.yiidii.pigeon.cmdb.entity.Res">
        SELECT id,name,alias,host,def_name defName,status,create_time createTime,update_time updateTime FROM res where name = #{name} order by create_time;
    </select>
    <select id="getResByIndicatorName" resultType="cn.yiidii.pigeon.cmdb.entity.Res">
         SELECT id,name,alias,host,def_name defName,status,create_time createTime,update_time updateTime FROM res where name = (select res_name from  res_ind where ind_name = #{name})
    </select>
    <select id="getParamByRes" resultType="cn.yiidii.pigeon.cmdb.entity.Param">
        SELECT id,`name`,`key`,`value` FROM param where `name` = #{name};
    </select>


    <insert id="addRes" parameterType="cn.yiidii.pigeon.cmdb.entity.Res" useGeneratedKeys="true" keyProperty="id">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into res
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="alias != null">
                alias,
            </if>
            <if test="host != null">
                host,
            </if>
            <if test="defName != null">
                def_name,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="alias != null">
                #{alias},
            </if>
            <if test="host != null">
                #{host},
            </if>
            <if test="defName != null">
                #{defName},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
        </trim>
    </insert>

